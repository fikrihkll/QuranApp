<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/ntSurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/ntBtnPrev"
        android:layout_weight="50"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        tools:text="Al - Baqarah" />

    <TextView
        android:id="@+id/ntAyat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ntSurat"
        android:layout_alignStart="@+id/ntSurat"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="691dp"
        android:layout_toStartOf="@id/ntBtnPrev"
        android:layout_weight="50"
        android:textColor="@color/grey"
        android:textSize="12sp"
        tools:text="Ayat 25" />

    <ImageView
        android:id="@+id/ntBtnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@id/ntBtnPlay"
        android:padding="3dp"
        android:src="@drawable/ic_chevron_left_black_24dp" />

    <ImageView
        android:id="@+id/ntBtnPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@id/ntBtnNext"
        android:padding="3dp"
        android:src="@drawable/ic_pause_black_24dp" />

    <ImageView
        android:id="@+id/ntBtnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ntBtnPrev"
        android:layout_alignBottom="@+id/ntBtnPrev"
        android:layout_marginTop="0dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@id/ntBtnClose"
        android:padding="3dp"
        android:src="@drawable/ic_chevron_right_black_24dp" />

    <ImageView
        android:id="@+id/ntBtnClose"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/ntBtnPlay"
        android:layout_alignBottom="@+id/ntBtnPlay"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:tint="@android:color/holo_red_light" />
</RelativeLayout>